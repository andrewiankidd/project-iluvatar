####### Profile Options #######
# Select docker compose profile to use
# netboot:
#  - Only runs TFTP and NFS Servers
# debian-netboot:
#  - Runs TFTP and NFS Servers
#  - Downloads specified DOWNLOAD_LINK SD Image and extracts files to NFS and TFTP shares
# debian-sdcard:
#  - Does not run TFTP and NFS Servers
#  - Downloads specified DOWNLOAD_LINK SD Image and extracts files to NFS and TFTP shares
COMPOSE_PROFILE=debian-netboot

####### Select Raspberry Pi OS version to download #######
## Ubuntu Server 24.04
DOWNLOAD_LINK=https://cdimage.ubuntu.com/releases/24.04/release/ubuntu-24.04.3-preinstalled-server-arm64+raspi.img.xz
ASSETS_DIR=ubuntuserver

## RaspiOS Min
# DOWNLOAD_LINK=https://downloads.raspberrypi.com/raspios_lite_arm64/images/raspios_lite_arm64-2023-12-11/2023-12-11-raspios-bookworm-arm64-lite.img.xz
# ASSETS_DIR=raspios

## RaspiOS
# DOWNLOAD_LINK=https://downloads.raspberrypi.com/raspios_arm64/images/raspios_arm64-2023-12-06/2023-12-05-raspios-bookworm-arm64.img.xz
# ASSETS_DIR=raspios

## RaspiOS Full
# DOWNLOAD_LINK=https://downloads.raspberrypi.com/raspios_full_arm64/images/raspios_full_arm64-2023-12-06/2023-12-05-raspios-bookworm-arm64-full.img.xz
# ASSETS_DIR=raspios

####### General Options #######
# Should boot files be cleaned before building new ones
CLEAN_BOOT_FILES=true
# Should OS files be cleaned before building new ones
CLEAN_OS_FILES=false

####### Rebuild Options #######
# Force re-extraction of the downloaded image even if an extracted artifact exists
FORCE_REEXTRACT=false

####### VM Settings #######
VM_OS="22.04"
VM_NAME="netboot-$COMPOSE_PROFILE-vm"
VM_CPUS="8"
VM_MEMORY="4G"
VM_DISK="15G"
VM_REBUILD=false

####### NFS Server #######
NFS_VERSION=3
NFS_EXPORT_0="/mnt/nfsshare *(rw,fsid=0,async,no_subtree_check,no_auth_nlm,insecure,no_root_squash)"
NFS_LOG_LEVEL=DEBUG

####### Network Options #######
BOOTSTRAP_IP_ADDRESS=192.168.1.66
